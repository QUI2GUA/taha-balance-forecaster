datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Account {
  id              String        @id @default(cuid())
  name            String
  currentBalance  Decimal
  transactions    Transaction[]
}

model Transaction {
  id              String        @id @default(cuid())
  accountId       String
  account         Account       @relation(fields: [accountId], references: [id])
  description     String
  amount          Decimal
  startDate       DateTime
  endDate         DateTime?
  frequency       String // e.g., "daily", "weekly", "monthly", "yearly"
  interval        Int           // e.g., every 1 week, every 2 months
  dayOfWeek       Int?          // 0-6 (Sun-Sat)
  dayOfMonth      Int?          // 1-31
  monthOfYear     Int?          // 1-12
}
